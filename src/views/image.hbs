<div class="card">
    <div class="card-header">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
        <div class="card-body">
            <div class="text-center">
                <img src="/public/upload/{{image.filename}}" class="img-fluid">
            </div>
            <p>{{image.description}}</p>
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
                        <i class="far fa-thumbs-up"></i>Like
                    </button>
                </div>
                <div class="col-md-4">
                    <span class="likes-count">{{image.likes}}</span>
                    <i class="fas fa-heart"></i>
                </div>
                <div class="col-md-2">
                    <i class="fas fa-eye"></i>{{image.views}}
                </div>
                <div class="col-md-2">

                    <i class="far fa-clock"></i>
                    {{timeago image.timestamp}}

                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment -o"></i> Post a comment
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago timestamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>