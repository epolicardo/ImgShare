<div class="card">
    <div class="card-title">
        <h3>Galeria</h3>
    </div>
</div>

<div class="card-body">
    <div class="row">
        {{#each images}}
        <div class="col-md-4">
            <a href="/images/{{uniqueId}}">
                <img src="public/upload/{{filename}}" class="w-100 h-100 img-thumbnail">
            </a>
        </div>
        {{/each}}
    </div>
</div>