<div class="card">
    <div class="card-header bg-dark">
        <div class="card-title text-white">
            <h3>Galeria</h3>
        </div>
    </div>
</div>

<div class="card-body">
    <div class="row">
        {{#each images}}
        <div class="col-md-4">
            <a href="/images/{{uniqueId}}">
                <div class="card">
                    <div class="card-header">
                        <h6>{{title}}</h6>
                    </div>
                    <div class="card-body">
                        <img src="public/upload/{{filename}}" class=" img-thumbnail" >
                    </div>
                </div>
            </a>
        </div>

        {{/each}}
    </div>
</div>